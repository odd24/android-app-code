<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/stepCountText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/StepCountSwitch"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <Switch
        android:id="@+id/StepCountSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/stepCountText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stepCountText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="104dp"
        android:layout_height="29dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="16dp"
        android:text="计步数据："
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/stepCountText"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="113dp" />
</androidx.constraintlayout.widget.ConstraintLayout>